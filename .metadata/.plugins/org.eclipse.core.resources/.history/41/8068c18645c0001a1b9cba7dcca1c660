package com.duicaishijiao.crawler;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import us.codecraft.webmagic.Spider;
import us.codecraft.webmagic.pipeline.JsonFilePipeline;

@SpringBootApplication
public class Application implements CommandLineRunner{

	public static void main(String[] args) {
		SpringApplication.run(Application.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		MiuiRepoPageProcessor processor = new MiuiRepoPageProcessor();
		Spider spider = Spider.create(processor);
		spider.setDownloader(new SeleniumChromeDownloader());
		spider.addPipeline(new JsonFilePipeline("E:\\temdata\\"));
		spider.addUrl(processor.getEntrance()).thread(5).run();
	}

}
